{% extends "layout.njk" %}

{% block content %}

    <main>

        <div class="main-content">
            <div class="row justify-content-md-center recipes-container">

                {% for recipe in recipes %}

                    <div class="col-lg-4-md-4-sm-12 mx-auto">
                        <ul class="recipes-list">
                            <li>
                                <article class="recipe-card">
                                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                                    <h3>{{recipe.title}}</h3>
                                    <p>por {{recipe.author}}</p>
                                </article>
                            </li>
                        </ul>
                    </div>

                {% endfor %}

            </div>
        </div>

    </main>

{% endblock content %} 